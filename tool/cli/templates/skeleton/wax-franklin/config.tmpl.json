{
  "name"    : "${Name}",

  "include" :
  [
    {
      "path" : "$${QOOXDOO_PATH}/tool/data/config/application.json"
    }
  ],

  "export" :
  [
    "api",
    "api-data",
    "build",
    "clean",
    "distclean",
    "dependencies",
    "fix",
    "info",
    "lint",
    "migration",
    "pretty",
    "profiling",
    "source",
    "source-all",
    "source-hybrid",
    "source-server",
    "source-server-reload",
    "source-httpd-config",
    "test",
    "test-source",
    "translation",
    "validate-config",
    "validate-manifest",
    "watch"
  ],

  "default-job" : "source-hybrid",

  "let" :
  {
    "APPLICATION"  : "${Namespace}",
    "QOOXDOO_PATH" : "${REL_QOOXDOO_PATH}",
    "QXTHEME"      : "${Namespace}.theme.Theme",
    "API_EXCLUDE"  : ["qx.test.*", "$${APPLICATION}.theme.*", "$${APPLICATION}.test.*"],
    "LOCALES"      : [ "en" ],
    "CACHE"        : "${Cache}",
    "ROOT"         : "."
  },

  "jobs" :
  {
    "source" :
    {
      "environment" :
      {
        "qx.nativeScrollBars" : true
      }
    },
    "build" :
    {
      "environment" :
      {
        "qx.nativeScrollBars" : true
      },

      "copy-files" :
      {
        "files" : ["${Namespace}.js"],
        "source" : "build/script/",
        "target" : "phonegap_${Namespace}/www/script/"
      }
    }
  }
}
