{
  "$schema": "https://qooxdoo.org/schema/compile-1-0-0.json",
  "targets": [
    {
      "type": "source",
      "application-types": [
        "browser"
      ],
      "outputPath": "compiled/browser/source",
      "babelOptions": {
        "targets": {
          "edge": "18",
          "chrome": "79",
          "firefox": "72"
        }
      }
    },
    {
      "type": "build",
      "application-types": [
        "browser"
      ],
      "outputPath": "compiled/browser/build",
      "deployPath": "html"
    },
    {
      "type": "source",
      "application-types": [
        "node"
      ],
      "outputPath": "compiled/node/source",
      "babelOptions": {
        "targets": "node >= 11"
      }
    },
    {
      "type": "build",
      "application-types": [
        "node"
      ],
      "outputPath": "compiled/node/build",
      "deployPath": "lib",
      "minify": "off",
      "babelOptions": {
        "targets": "node >= 11"
      }
    }
  ],
  "defaultTarget": "source",
  "locales": [
    "en"
  ],
  "ignores": [
    "manifest_path",
    "setImmediate",
    "__dirname",
    "module.*",
    "process.*",
    "Promise.*",
    "require.*",
    "path.*",
    "args.*"
  ],
  "applications": [
    {
      "class": "qxl.apiviewer.Application",
      "theme": "qxl.apiviewer.Theme",
      "name": "apiviewer",
      "title": "Qooxdoo compiler API",
      "bootPath": "source/boot",
      "default": true,
      "deploy": true,
      "environment": {
        "qx.icontheme": "Tango",
        "qxl.apiviewer.applicationName": "compiler",
        "qxl.apiviewer.exclude": [
           "qx.*",
           "qxl.*",
           "qxWeb"		   
        ],
        "qxl.apiviewer.include": [
           "qx.tool.*"
        ]
      },
      "include": [
      ],
      "exclude": [
        "qx.test.*"
      ]
    },
    {
      "class": "qx.tool.cli.Application",
      "name": "compiler",
      "title": "Qooxdoo Compiler",
      "type": "node",
      "deploy": true,
      "include": [
        "qx.core.BaseInit",
        "qx.tool.*"
      ],
      "exclude": [
        "q",
        "qxWeb",
        "qx.module.*",
        "qx.ui.*",
        "qx.log.appender.Native",
        "qx.log.appender.Element",
        "qx.bom.Stylesheet",
        "qx.bom.Selector",
        "qx.bom.MediaQuery",
        "qx.bom.Flash",
        "qx.bom.Vml",
        "qx.bom.client.Html",
        "qx.bom.client.Plugin",
        "qx.bom.client.Pdfjs",
        "qx.event.handler.Pointer",
        "qx.event.handler.Gesture",
        "qx.event.handler.PointerCore"
      ]
    },
    {
      "class": "qxl.testnode.Application",
      "name": "testnode",
      "title": "Node Test",
      "type": "node",
      "deploy": false,
      "environment": {
        "testnode.testNameSpace": "qx.test"
      },
      "include": [
        "qx.core.BaseInit",
        "qx.test.tool.*",
        "qx.tool.*",
        "qx.dev.*"
      ],
      "exclude": [
        "q",
        "qxWeb",
        "qx.module.*",
        "qx.ui.*",
        "qx.log.appender.Native",
        "qx.log.appender.Element",
        "qx.bom.Stylesheet",
        "qx.bom.Selector",
        "qx.bom.MediaQuery",
        "qx.bom.Flash",
        "qx.bom.Vml",
        "qx.bom.client.Html",
        "qx.bom.client.Plugin",
        "qx.bom.client.Pdfjs",
        "qx.event.handler.Pointer",
        "qx.event.handler.Gesture",
        "qx.event.handler.PointerCore"
      ]
    }
  ],
  "eslintConfig": {
    "env": {
      "node": true
    },
    "extends": [
      "@qooxdoo/qx"
    ],
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "rules": {
      "@qooxdoo/qx/no-illegal-private-usage": "error",
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ]
    }
  },
  "sass": {
    "compiler": "legacy"
  }
}